<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="339.0" prefWidth="456.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="booking.timer.ui.settings.SettingsController">
    <children>
        <VBox layoutX="197.0" layoutY="104.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXTextField fx:id="txtUsername" labelFloat="true" promptText="Username">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </JFXTextField>
                <JFXPasswordField fx:id="txtPassword" labelFloat="true" promptText="Password">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </JFXPasswordField>
                <JFXPasswordField fx:id="txtConfirmPassword" labelFloat="true" promptText="Confirm Password">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </JFXPasswordField>
                <Label text="Password Length">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <Spinner fx:id="spinnerPasswordLength">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Spinner>
                <Label layoutX="10.0" layoutY="148.0" text="Time Duration">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <Spinner fx:id="spinnerTimeDuration">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Spinner>
                <HBox prefHeight="59.0" prefWidth="456.0">
                    <children>
                        <JFXButton onAction="#handleSavePreferences" prefHeight="100.0" prefWidth="250.0" text="Save"/>
                        <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancelPreferences" prefHeight="100.0"
                                   prefWidth="250.0" text="Cancel"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
